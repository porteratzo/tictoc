[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503, D100, D101, D102, D103, D104, D105, D107, D200, D202, D205, D209, D400, D401
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache
per-file-ignores =
    __init__.py:F401
    plot.py:F401
    tictoc/Benchmarker.py:F401
